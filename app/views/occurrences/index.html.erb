<p id="notice"><%= notice %></p>

<h1>Occurrences</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Severity</th>
      <th>Todo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @occurrences.each do |occurrence| %>
      <tr>
        <td><%= occurrence.description %></td>
        <td><%= occurrence.severity %></td>
        <td><%= occurrence.todo %></td>
        <td><%= link_to 'Show', occurrence %></td>
        <td><%= link_to 'Edit', edit_occurrence_path(occurrence) %></td>
        <td><%= link_to 'Destroy', occurrence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

